<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"

        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@drawable/grid_shadow_box"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="3dp">

    <ImageView android:layout_width="60dp"
               android:layout_height="70dp"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               android:id="@+id/productImageView"
               android:layout_marginTop="8dp"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="product name "
              app:layout_constraintStart_toEndOf="@+id/productImageView"
              android:layout_marginStart="12dp"
              app:layout_constraintTop_toTopOf="parent"
              android:layout_marginEnd="16dp"
              android:layout_marginTop="8dp"
              android:id="@+id/productName"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintHorizontal_bias="0.0"/>
    <androidx.cardview.widget.CardView
            android:layout_width="70dp"
            android:layout_height="50dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="4dp" app:layout_constraintStart_toEndOf="@+id/productImageView"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/productName"
            android:layout_marginTop="3dp" app:layout_constraintHorizontal_bias="0.076"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.145">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/supplier_image"
                android:scaleType="fitXY"/>

    </androidx.cardview.widget.CardView>
    <TextView
            android:layout_height="0dp"
            android:layout_width="wrap_content"
            android:text="product price"
            android:gravity="center"
            android:id="@+id/productPrice"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/productImageView" app:layout_constraintVertical_bias="0.0"
            android:layout_marginTop="8dp" android:layout_marginBottom="8dp" android:layout_marginStart="8dp"/>
    <TextView android:layout_width="0dp" android:layout_height="20dp"

              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toEndOf="@+id/productPrice"
              app:layout_constraintHorizontal_bias="0.0"
              android:text="LE"
              android:textColor="@color/colorPrimaryDark"
              android:layout_marginStart="8dp"
              app:layout_constraintTop_toTopOf="@+id/productPrice"
              app:layout_constraintBottom_toBottomOf="@+id/productPrice" android:layout_marginTop="8dp"
              app:layout_constraintVertical_bias="0.4" android:layout_marginBottom="8dp"></TextView>

</androidx.constraintlayout.widget.ConstraintLayout>