<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:focusable="false"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:id="@+id/list_item_items"
              android:layout_height="wrap_content"
              android:background="@color/background_light_grey"
              tools:ignore="RtlSymmetry"
              android:padding="1dp">

    <RelativeLayout android:layout_width="match_parent"
                    android:background="@color/white"
                    android:layout_height="@dimen/grid_item_image_height">

        <ImageView
                android:focusable="false"
                android:background="@color/white"
                android:layout_gravity="center"
                android:id="@+id/productImageView"
                android:maxWidth="@dimen/half_screen_width"
                android:layout_width="match_parent"
                android:layout_height="@dimen/grid_item_image_height"
                android:scaleType="centerInside"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/item_image_gradient"/>



        <ImageView
                android:id="@+id/supplier_image"
                android:scaleType="centerCrop"
                android:layout_margin="@dimen/some_space"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:src="@mipmap/ic_launcher"/>

    </RelativeLayout>


    <LinearLayout
            android:paddingLeft="@dimen/little_space"
            android:paddingRight="@dimen/little_space"
            android:paddingBottom="@dimen/some_space"
            android:paddingTop="@dimen/little_space"
            android:minHeight="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">
        <TextView
                android:id="@+id/productName"
                android:gravity="start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                tools:text="Performance Summer"
                android:textSize="@dimen/large_text_size"
                android:textColor="@color/dark_grey"/>

        <TextView
                android:layout_marginBottom="@dimen/little_space"
                android:layout_marginTop="@dimen/little_space"
                android:textStyle="bold"
                android:id="@+id/productPrice"
                tools:text="200 LE"
                android:gravity="start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/orange"/>



        <LinearLayout
                android:layout_marginTop="@dimen/little_space"
                android:gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/list_item_items_actions"
                android:orientation="horizontal">
            <Button
                    android:drawablePadding="@dimen/little_space"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:padding="@dimen/little_space"
                    android:textAlignment="center"
                    android:textSize="@dimen/small_text_size"
                    android:id="@+id/buyButton"
                    android:textColor="@color/white"
                    android:background="@drawable/orange_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAllCaps="false"
                    android:drawableStart="@drawable/ic_shopping_cart_white_18dp"
                    android:text="Buy"/>

            <Button
                    android:drawablePadding="@dimen/little_space"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:padding="@dimen/little_space"
                    android:layout_marginStart="@dimen/little_space"
                    android:textSize="@dimen/small_text_size"
                    android:textAlignment="center"
                    android:id="@+id/wishlistButton"
                    android:textColor="@color/white"
                    android:background="@drawable/red_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:drawableStart="@drawable/ic_favorite_white_18dp"
                    android:text="Wishlist"/>

        </LinearLayout>

        <LinearLayout
                android:layout_marginTop="@dimen/little_space"
                android:gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/list_item_items_options"
                android:orientation="horizontal">

        </LinearLayout>

    </LinearLayout>

</LinearLayout>