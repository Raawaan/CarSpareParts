<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        tools:context=".sparepartdetails.SparePartDetailsActivity">


    <ImageView
               android:layout_width="wrap_content"
               android:layout_height="123dp"
               android:layout_marginTop="8dp"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               android:id="@+id/productImageView"
               app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.14"/>


    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/productNameTextView"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="8dp"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginTop="8dp"
              android:layout_marginEnd="8dp"
              android:textColor="@color/colorPrimaryDark"
              app:layout_constraintTop_toBottomOf="@+id/productImageView"/>


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_height="141dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/productNameTextView"
            android:layout_marginTop="36dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shadow_box"
            android:id="@+id/descriptionCardView"
            android:layout_width="270dp">

        <TextView android:layout_width="234dp"
                  android:layout_height="88dp"
                  android:textAlignment="center"
                  android:gravity="center"
                  android:id="@+id/descriptionTextView"
                  android:textAllCaps="true"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="supplier : sddsmdmdmksdm"
              android:id="@+id/supplierTextView"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="8dp"
              android:textStyle="bold|italic"
              android:textAllCaps="true"
              app:layout_constraintTop_toBottomOf="@+id/descriptionCardView"
              android:layout_marginTop="32dp" app:layout_constraintHorizontal_bias="0.519"/>
    <Button android:layout_width="278dp"
            android:layout_height="46dp"
            android:id="@+id/RequestBtn"
            android:layout_marginBottom="16dp"
            android:text="Request"
            android:background="@drawable/button"
            android:layout_marginTop="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintTop_toBottomOf="@+id/supplierTextView"/>
</androidx.constraintlayout.widget.ConstraintLayout>