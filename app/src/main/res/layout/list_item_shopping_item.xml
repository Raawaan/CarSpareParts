<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:id="@+id/list_item_selected_items"
              android:background="@color/background_light_grey"
              android:paddingTop="2dp"
              android:layout_height="wrap_content">

    <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

        <ImageView
                android:padding="@dimen/little_space"
                android:layout_gravity="center"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/itemImageView"
                android:scaleType="centerInside"/>


        <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/item_image_gradient"/>

    </RelativeLayout>


    <LinearLayout
            android:background="@color/white"
            android:padding="@dimen/some_space"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
                android:id="@+id/nameTextView"
                android:gravity="start"
                tools:text="All performance tires"
                android:layout_marginBottom="@dimen/some_space"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/large_text_size"
                android:textColor="@color/dark_grey" />

        <TextView
                android:visibility="gone"
                android:id="@+id/statusTextView"
                android:paddingTop="@dimen/little_space"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Delivered"/>

        <LinearLayout
                android:id="@+id/list_item_cart_quantity_layout"
                android:paddingTop="@dimen/little_space"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                    android:id="@+id/counterTextView"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:paddingTop="@dimen/little_space"
                    android:paddingBottom="@dimen/little_space"
                    android:paddingRight="@dimen/more_space"
                    android:paddingLeft="@dimen/more_space"
                    tools:text="1"
                    android:background="@drawable/white_background_radius_border"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            <ImageButton
                    android:visibility="gone"
                    android:id="@+id/decreaseButton"
                    android:layout_marginStart="@dimen/some_space"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:paddingRight="@dimen/little_space"
                    android:paddingLeft="@dimen/little_space"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_remove_black_24dp"
                    android:tint="@color/white"
                    android:textColor="@color/white"
                    android:background="@drawable/orange_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <ImageButton
                    android:visibility="gone"
                    android:id="@+id/increaseButton"
                    android:layout_gravity="center"
                    android:layout_marginStart="1dp"
                    android:paddingRight="@dimen/little_space"
                    android:paddingLeft="@dimen/little_space"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:src="@drawable/ic_add_black_24dp"
                    android:tint="@color/white"
                    android:textColor="@color/white"
                    android:background="@drawable/orange_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
                android:textStyle="bold"
                android:paddingTop="@dimen/little_space"
                android:id="@+id/priceTextView"
                android:gravity="start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/orange"
                tools:text="40 LE"/>

        <LinearLayout
                android:paddingTop="@dimen/some_space"
                android:paddingBottom="@dimen/little_space"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <Button
                        android:drawableStart="@drawable/ic_more_vert_white_18dp"
                        android:gravity="center"
                        android:minHeight="0dp"
                        android:minWidth="0dp"
                        android:padding="@dimen/little_space"
                        android:textSize="@dimen/small_text_size"
                        android:id="@+id/detailsTextView"
                        android:textColor="@color/white"
                        android:background="@drawable/blue_button"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textAllCaps="false"
                        android:text="Details"/>

                <Button
                        android:layout_marginStart="@dimen/little_space"
                        android:drawablePadding="@dimen/little_space"
                        android:minHeight="0dp"
                        android:minWidth="0dp"
                        android:padding="@dimen/little_space"
                        android:textAlignment="center"
                        android:textSize="@dimen/small_text_size"
                        android:id="@+id/wishlistButton"
                        android:textColor="@color/blue"
                        android:drawableTint="@color/blue"
                        android:background="@drawable/unselected_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:drawableStart="@drawable/ic_favorite_white_18dp"
                        android:text="Wishlist"/>
            </LinearLayout>

            <ImageButton
                    android:visibility="gone"
                    android:layout_marginStart="2dp"
                    android:gravity="center"
                    android:id="@+id/removeButton"
                    android:layout_gravity="end"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:paddingTop="@dimen/little_space"
                    android:paddingBottom="@dimen/little_space"
                    android:paddingRight="@dimen/some_space"
                    android:paddingLeft="@dimen/some_space"
                    android:textAlignment="center"
                    android:src="@drawable/ic_delete_black_18dp"
                    android:textColor="@color/white"
                    android:tint="@color/hikids_blue"
                    android:background="@drawable/unselected_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>