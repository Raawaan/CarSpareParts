<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".AboutFragment">
    <ImageView android:src="@drawable/car_parts"
               android:layout_width="352dp"
               android:layout_height="150dp"
               android:layout_gravity="center_horizontal" app:layout_constraintEnd_toEndOf="parent"
               android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
               android:layout_marginStart="8dp" android:layout_marginTop="8dp"
               app:layout_constraintBottom_toTopOf="@+id/textView" app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintHorizontal_bias="0.488" app:layout_constraintVertical_bias="0.521"/>

    <TextView
            android:layout_width="313dp"
            android:layout_height="100dp"
            android:text="We choose our suppliers carefully and only provide you with high quality services. every supplier provides license and prof of identity for safe and guaranteed services. "
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="40dp"
           android:id="@+id/textViewdesc"
            app:layout_constraintVertical_bias="0.678"/>
    <TextView android:text="How do we guarantee high quality service for you? "
              android:height="80dp"
              android:id="@+id/question"
              android:layout_width="250dp"
              android:layout_height="54dp"
              android:textStyle="bold|italic"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="8dp"
              app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintHorizontal_bias="0.496"
              android:layout_marginTop="8dp"/>

    <TextView
            android:layout_width="313dp"
            android:layout_height="100dp"
            android:text="Sparely helps you take care of your car by giving you the opportunity to buy high quality spare parts at the best prices in the market. forget the hassle of not finding the spare parts you need and buying spare parts for high prices !"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:id="@+id/textView"
            app:layout_constraintVertical_bias="0.339"/>
    <Button android:layout_width="match_parent"
            android:layout_height="48dp"
            android:id="@+id/contactUs"
            android:text="Contact Us"
            android:background="@drawable/button"
            tools:layout_editor_absoluteX="0dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewdesc" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.161"/>
</androidx.constraintlayout.widget.ConstraintLayout>