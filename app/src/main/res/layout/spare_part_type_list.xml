<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        xmlns:tools="http://schemas.android.com/tools" android:id="@+id/spare_part_type_content"
              android:layout_width="match_parent"
        android:background="@drawable/shadow_box"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
              android:layout_height="100dp">
    <ImageView
            android:id="@+id/sparePartTypeIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp" android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.2"/>
    <TextView android:layout_width="wrap_content"
              android:id="@+id/sparePartName"
              android:layout_height="wrap_content"
              app:layout_constraintStart_toEndOf="@+id/sparePartTypeIcon"
              android:layout_marginStart="8dp"
              android:layout_marginTop="40dp"
              android:textColor="#404040"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="8dp"
              app:layout_constraintHorizontal_bias="0.062"
              android:textSize="15sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
