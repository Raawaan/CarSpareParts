<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:id="@+id/spare_part_type_content"
              android:layout_width="match_parent"
              android:layout_height="115dp">
    <ImageView
            android:id="@+id/sparePartTypeIcon"
            android:layout_width="100dp"
            android:layout_height="100dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView android:layout_width="wrap_content"
              android:id="@+id/sparePartName"
              android:layout_height="wrap_content"
              app:layout_constraintStart_toEndOf="@+id/sparePartTypeIcon"
              android:layout_marginStart="8dp"
              android:layout_marginTop="40dp"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="8dp"
              app:layout_constraintHorizontal_bias="0.348" android:textStyle="bold" android:textSize="20sp"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000" tools:layout_editor_absoluteX="0dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
